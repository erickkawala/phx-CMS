<h1>Authors
  <span style="font-size:.5em; margin-left:3.75em;">
    <%= link "Edit", to: Routes.cms_author_path(@conn, :edit, Author) %>
  </span>
</h1>
<table>
  <thead>
    <tr>
      <th>Bio</th>
      <th>Genre</th>
      <th>Role</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
<%= for author <- @authors do %>
    <tr>
      <td><%= author.bio %></td>
      <td><%= author.genre %></td>
      <td><%= author.role %></td>

      <td>
      </td>
    </tr>
<% end %>
  </tbody>
</table>


